{
  "name": "rollup-simple-project",
  "version": "1.0.0",
  "description": "Rollup simple project boilerplate",
  "main": "index.js",
  "author": "sdarmaputra",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "start": "serve -l 10009",
    "dev": "npm-run-all --parallel build:watch start",
    "lint": "eslint ./src --fix && stylelint ./src/**/*.{css,scss} --fix ; exit 0",
    "format": "prettier ./src/**/* --write",
    "lint:format": "yarn lint && yarn format ; exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.css": [
        "stylelint --fix",
        "git add"
      ],
      "*.scss": [
        "stylelint --syntax scss --fix",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.14.6",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-uglify": "^6.0.2",
    "serve": "^11.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  }
}
